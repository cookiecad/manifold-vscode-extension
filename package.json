{
  "name": "manifold-vscode-extension",
  "displayName": "Manifold 3D Editor",
  "description": "Run and visualize Manifold 3D scripts inside VS Code.",
  "publisher": "Loosetooth",
  "repository": {
    "type": "git",
    "url": "https://github.com/Loosetooth/manifold-vscode-extension"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "manifold.openViewer",
        "title": "Manifold: Open 3D Viewer"
      }
    ],
    "languages": [
      {
        "id": "typescript",
        "aliases": [
          "TypeScript",
          "ts"
        ],
        "extensions": [
          ".mfc",
          ".manifoldcad"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "dependencies": {
    "esbuild-wasm": "^0.25.9",
    "gl-matrix": "^3.4.4"
  }
}